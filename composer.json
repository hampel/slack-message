{
    "name": "hampel/slack-message",
    "description": "Standalone implementation of Laravel's SlackMessage classes from illuminate/notifications",
	"homepage" : "https://bitbucket.org/hampel/slack-message",
	"authors": [
		{
			"name": "Simon Hampel",
			"email": "simon@hampelgroup.com"
		},
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        }
	],
	"support": {
		"issues": "https://bitbucket.org/hampel/slack-message/issues",
		"source": "https://bitbucket.org/hampel/slack-message/src"
	},
	"keywords": [
		"slack",
		"laravel"
	],
	"license" : [
		"MIT"
	],
    "require": {
        "php": ">=5.5"
    },
	"require-dev": {
		"phpunit/phpunit": "^8.0",
		"mockery/mockery": "^1.0",
        "laravel/slack-notification-channel": "^2.0"
	},
    "suggest": {
		"guzzlehttp/guzzle": "Required to use the Slack transport (~6.0)"
    },
    "autoload": {
        "psr-4": {
            "Hampel\\SlackMessage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hampel\\SlackMessage\\": "tests/"
        }
	},
 	"minimum-stability": "dev",
	"prefer-stable": true
}
